{% extends 'base.html.twig' %}

{% block title %}Kunde index{% endblock %}

{% block body %}
    <h1>Kunde index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Strasse</th>
                <th>Plz</th>
                <th>Ort</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kunde in kundes %}
            <tr>
                <td>{{ kunde.id }}</td>
                <td>{{ kunde.name }}</td>
                <td>{{ kunde.strasse }}</td>
                <td>{{ kunde.plz }}</td>
                <td>{{ kunde.ort }}</td>
                <td>
                    <a href="{{ path('app_kunde_show', {'id': kunde.id}) }}">show</a>
                    <a href="{{ path('app_kunde_edit', {'id': kunde.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_kunde_new') }}">Create new</a>
{% endblock %}
